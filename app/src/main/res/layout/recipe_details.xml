<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/details_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/food3" />

        <TextView
            android:id="@+id/details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/amiko"
            android:text="Recipe Name"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/details_image"
            app:layout_constraintTop_toBottomOf="@+id/details_image" />

        <TextView
            android:id="@+id/ingredients_head"
            android:layout_width="195dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/amiko"
            android:text="Ingredients"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/details_ingredients"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_ingredients"
            android:layout_width="436dp"
            android:layout_height="96dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:minHeight="60dp"
            android:text="apples, peaches, pineapples"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_name" />

        <TextView
            android:id="@+id/directions_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amiko"
            android:text="Directions"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_ingredients" />

        <TextView
            android:id="@+id/details_directions"
            android:layout_width="418dp"
            android:layout_height="168dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Step 1, step 2, step 3, step 4"
            app:layout_constraintStart_toStartOf="@+id/details_image"
            app:layout_constraintTop_toBottomOf="@+id/directions_head" />

        <Button
            android:id="@+id/add_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="648dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>